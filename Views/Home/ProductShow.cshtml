

@model Product
<!-- single product -->
<div class="single-product mt-150 mb-150"dir="rtl">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                
                
                <div class="single-product-img">
                    <img   style="height:400px;border-radius:20px; min-width:300px;margin-left:180px" src="~/@Model.Image" alt="">
                </div>
                
                </div>
               
            <div class="col-md-7">
                <div class="single-product-content">
                    <h3>@Model.Name</h3>
                    <p class="single-product-pricing"><span>كمية المنتج:@Model.Quantity</span>ج.م @Model.Price</p>
                    <p>@Model.Description</p>
                    <div class="single-product-form">

                        <form asp-action="AddtoCart" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label for="quantity">الكمية:</label>
                            <input type="number" id="quantity" name="quantity" min="1" value="1" required />
                            <br />
                            <button type="submit" class="btn btn-outline-dark" style="width:200px;height:35px;background-color:sandybrown"><i class="fas fa-shopping-cart"></i> أضف إلى السلة </button>
                        </form>
                        <br />
                        <p><strong>قسم المنتج: </strong>: @Model.Cat.Name</p>
                        <p style="text-align:left"><strong>اسم البائع</strong>:@Model.SupplierName</p>
                        <p style="text-align:left"><strong>تاريخ المنتج</strong>:@Model.DateSystem</p>

                    </div>
                    <h4>Share:</h4>
                    <ul class="product-share">
                        <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href=""><i class="fab fa-twitter"></i></a></li>
                        <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end single product -->
